uvのインストール

mkdir -p $HOME/local
cd $HOME/local
wget https://ftp.gnu.org/gnu/gcc/gcc-12.3.0/gcc-12.3.0.tar.gz
tar xf gcc-12.3.0.tar.gz
cd gcc-12.3.0
./configure --prefix=$HOME/local/gcc-12.3.0 --disable-multilib
make -j$(nproc)
make install

export PATH=$HOME/local/gcc-12.3.0/bin:$PATH
export LD_LIBRARY_PATH=$HOME/local/gcc-12.3.0/lib64:$LD_LIBRARY_PATH
export CC=gcc
export CXX=g++

uv sync